---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portafolio de desarrollo web" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-950 text-gray-100">
    <nav
      class="fixed top-0 w-full bg-gray-950/80 backdrop-blur-sm z-50 border-b border-gray-800"
    >
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href="#" class="text-xl font-bold text-blue-400">TuNombre</a>
          <div class="hidden md:flex space-x-8">
            <a href="#about" class="hover:text-blue-400 transition">Sobre m√≠</a>
            <a href="#projects" class="hover:text-blue-400 transition"
              >Proyectos</a
            >
            <a href="#skills" class="hover:text-blue-400 transition">Skills</a>
            <a href="#contact" class="hover:text-blue-400 transition"
              >Contacto</a
            >
          </div>
        </div>
      </div>
    </nav>
    <slot />
  </body>
</html>
