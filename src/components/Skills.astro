---
const skills = {
  Frontend: {
    items: [
      "Angular",
      "Astro",
      "JavaScript",
      "TypeScript",
      "HTML/CSS",
      "Tailwind CSS",
      "Ionic",
    ],
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
    </svg>`,
  },
  Backend: {
    items: ["Node.js", "Express", "NestJS", "MySQL", "PostgreSQL", "REST APIs"],
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
    </svg>`,
  },
  Herramientas: {
    items: ["Git", "GitHub", "Vite", "CI/CD"],
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
    </svg>`,
  },
};
---

<section id="skills" class="py-32 px-4 relative">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-20 fade-in">
      <span
        class="font-semibold text-sm uppercase tracking-wider"
        style="color: var(--text-muted);">Tecnologías</span
      >
      <h2
        class="text-4xl md:text-5xl lg:text-6xl font-bold mt-4 mb-6"
        style="color: var(--text-primary);"
      >
        Mis <span class="gradient-text">Habilidades</span>
      </h2>
      <p class="text-lg max-w-2xl mx-auto" style="color: var(--text-muted);">
        Herramientas y tecnologías con las que trabajo para crear experiencias
        web excepcionales
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 mb-16">
      {
        Object.entries(skills).map(([category, data], index) => (
          <div
            class:list={[
              "fade-in group relative",
              {
                "md:fade-in-left": index === 0,
                "md:fade-in": index === 1,
                "md:fade-in-right": index === 2,
              },
            ]}
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div
              class="absolute -inset-0.5 rounded-2xl blur opacity-0 group-hover:opacity-100 transition duration-500"
              style="background-color: var(--shadow-color);"
            />
            <div class="relative glass rounded-2xl p-8 h-full hover-lift">
              <div
                class="w-16 h-16 rounded-xl flex items-center justify-center mb-6 transition-all duration-300"
                style="background-color: var(--card-bg);"
              >
                <div style="color: var(--text-primary);">
                  <Fragment set:html={data.icon} />
                </div>
              </div>
              <h3
                class="text-2xl font-bold mb-6"
                style="color: var(--text-primary);"
              >
                {category}
              </h3>
              <div class="space-y-3">
                {data.items.map((skill) => (
                  <div class="flex items-center gap-3 group/item">
                    <div
                      class="w-2 h-2 rounded-full group-hover/item:scale-150 transition-all"
                      style="background-color: var(--text-muted);"
                    />
                    <span
                      class="group-hover/item:translate-x-1 transition-all"
                      style="color: var(--text-secondary);"
                    >
                      {skill}
                    </span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <div class="fade-in">
      <div class="glass rounded-2xl p-8 md:p-12">
        <h3
          class="text-2xl md:text-3xl font-bold mb-8 text-center"
          style="color: var(--text-primary);"
        >
          También trabajo con
        </h3>
        <div class="flex flex-wrap justify-center gap-4">
          {
            [
              "Responsive Design",
              "Web Performance",
              "Accessibility",
              "Testing",
              "Agile/Scrum",
              "UI/UX Design",
              "API Integration",
            ].map((skill) => (
              <span
                class="px-6 py-3 glass rounded-xl font-medium transition-all duration-300 hover:-translate-y-1 hover-lift"
                style="background-color: var(--card-bg); color: var(--text-secondary);"
              >
                {skill}
              </span>
            ))
          }
        </div>
      </div>
    </div>

    <div class="mt-12 text-center fade-in">
      <div class="inline-flex items-center gap-3 px-6 py-4 glass rounded-full">
        <div class="relative">
          <div class="w-3 h-3 bg-emerald-500 rounded-full animate-pulse"></div>
          <div
            class="absolute inset-0 w-3 h-3 bg-emerald-500 rounded-full animate-ping"
          >
          </div>
        </div>
        <span style="color: var(--text-secondary);">
          Actualmente aprendiendo <span
            class="font-semibold"
            style="color: var(--text-primary);"
            >Python y Docker
          </span>
        </span>
      </div>
    </div>
  </div>
</section>
