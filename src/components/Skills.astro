---
const skills = {
  Frontend: [
    "React",
    "JavaScript",
    "TypeScript",
    "HTML/CSS",
    "Tailwind CSS",
    "Next.js",
  ],
  Backend: ["Node.js", "Express", "MongoDB", "PostgreSQL", "REST APIs"],
  Herramientas: ["Git", "Webpack", "Vite", "Figma", "Jest", "Docker"],
};
---

<section id="skills" class="py-20 px-4">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-4xl font-bold mb-12 text-center">Habilidades</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {
        Object.entries(skills).map(([category, items]) => (
          <div class="bg-gray-900 rounded-xl p-6 border border-gray-800">
            <h3 class="text-xl font-bold mb-4 text-blue-400">{category}</h3>
            <ul class="space-y-2">
              {items.map((skill) => (
                <li class="text-gray-300">â€¢ {skill}</li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>
