---
const projects = [
  {
    title: "E-commerce Platform",
    description:
      "Plataforma de comercio electrónico fullstack con carrito de compras, autenticación y pasarela de pagos.",
    tech: ["React", "Node.js", "MongoDB", "Stripe"],
    image:
      "https://images.unsplash.com/photo-1557821552-17105176677c?w=800&h=400&fit=crop",
    demo: "#",
    github: "#",
  },
  {
    title: "Dashboard Analytics",
    description:
      "Dashboard interactivo con gráficos en tiempo real y manejo de grandes volúmenes de datos.",
    tech: ["React", "TypeScript", "Chart.js", "Tailwind"],
    image:
      "https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=800&h=400&fit=crop",
    demo: "#",
    github: "#",
  },
  {
    title: "Task Management App",
    description:
      "Aplicación de gestión de tareas con drag & drop, filtros avanzados y sincronización en tiempo real.",
    tech: ["Next.js", "Firebase", "Zustand", "DnD Kit"],
    image:
      "https://images.unsplash.com/photo-1484480974693-6ca0a78fb36b?w=800&h=400&fit=crop",
    demo: "#",
    github: "#",
  },
];
---

<section id="projects" class="py-20 px-4 bg-gray-900/50">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl font-bold mb-12 text-center">Proyectos Destacados</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        projects.map((project) => (
          <div class="bg-gray-900 rounded-xl overflow-hidden border border-gray-800 hover:border-blue-500 transition group">
            <img
              src={project.image}
              alt={project.title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2 group-hover:text-blue-400 transition">
                {project.title}
              </h3>
              <p class="text-gray-400 mb-4">{project.description}</p>
              <div class="flex flex-wrap gap-2 mb-4">
                {project.tech.map((tech) => (
                  <span class="px-3 py-1 bg-blue-500/10 text-blue-400 rounded-full text-sm">
                    {tech}
                  </span>
                ))}
              </div>
              <div class="flex gap-4">
                <a
                  href={project.demo}
                  class="text-blue-400 hover:text-blue-300 transition"
                >
                  Demo →
                </a>
                <a
                  href={project.github}
                  class="text-gray-400 hover:text-gray-300 transition"
                >
                  GitHub →
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
